        .scroll-page-01_image
          img.i(src=IMG_PATH + "image_04.jpg" alt="" loading="lazy")
        .scroll-page-01_image
          img.i(src=IMG_PATH + "image_05.jpg" alt="" loading="lazy")
    include ../include/mixin/_script
